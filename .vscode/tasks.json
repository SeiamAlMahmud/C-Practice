{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building and running C program"
        },
        {
            "label": "Run C Program",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": "build",
            "dependsOn": "Build and Run C",
            "problemMatcher": []
        }
    ]
}
